<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayamoneim.myappportfolio.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@color/black">



    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="115dp"
        android:background="@drawable/round_button"
        android:text="Spotify Streamer"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:elegantTextHeight="true"
        android:id="@+id/spotify_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"

        android:layout_marginLeft="20dp"
        android:background="@drawable/round_button"
        android:text="Scores App"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:elegantTextHeight="true"
        android:id="@+id/scores_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="160dp"

        android:layout_marginLeft="115dp"
        android:background="@drawable/round_button"
        android:text="Library App"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:elegantTextHeight="true"
        android:id="@+id/library_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="240dp"

        android:layout_marginLeft="20dp"
        android:background="@drawable/round_button"
        android:text="Build It Bigger App"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:elegantTextHeight="true"
        android:id="@+id/build_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"

        android:layout_marginLeft="115dp"
        android:background="@drawable/round_button"
        android:text="XYZ Reader"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:elegantTextHeight="true"
        android:id="@+id/xyz_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="400dp"

        android:layout_marginLeft="20dp"
        android:background="@drawable/round_button"
        android:text="CAPSTONE: MY OWN APP"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        android:id="@+id/capstone_button"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="460dp"
        android:paddingTop="15dp"
        android:layout_marginLeft="170dp"
        android:textStyle="bold|italic"
        android:textSize="18dp"
        android:text="      My Nanodegree \n              Apps!"
        android:textColor="@color/white"
        />

</FrameLayout>
